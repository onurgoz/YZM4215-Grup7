@section Styles{
    <link href="/Templates/admin/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
}

<div id="layoutError">
            <div id="layoutError_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <div class="text-center mt-4">
                                    <img class="mb-4 img-error" src="/Templates/admin/dist/assets/img/error-404-monochrome.svg" />
                                    <h2 class="lead">@ViewBag.Code</h2>
                                    <p>Aradığınız sayfa bulunamadı.</p>
                                    <a asp-action="LogIn" asp-controller="Auth">
                                        <i class="fas fa-arrow-left mr-1"></i>
                                        Ana sayfaya dön
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>

@section JavaScript{
    <script src="/Templates/admin/dist/js/scripts.js"></script>
}