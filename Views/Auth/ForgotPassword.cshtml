@model ForgotPasswordModel

@section Styles{
	<link rel="stylesheet" href="/css/login.css">
    <style>
        ul {
            list-style-type: none;
        }
    </style>
}
<div class="wrapper fadeInDown">
    <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
        <h1>Şifremi Unuttum</h1>
    </div>

    <!-- Login Form -->
    <form method="POST" class="signInForm" asp-action="ForgotPassword">
      <div class="form-group">
        <input type="email" id="email" class="fadeIn second" asp-for="@Model.Email"  placeholder="E-Posta">
      </div>
      <input type="submit" class="fadeIn fourth" value="Email Gönder">
      <div asp-validation-summary="All" class="text-danger">

      </div>
    </form>
  </div>
</div>

@section JavaScript{
  <script>
  jQuery.extend(jQuery.validator.messages, {
    email: "Lütfen geçerli bir email adresi giriniz.(a@b.c)"
  });
  </script>
}