@model DealerAddModel


    <div class="row h-100">
        <h4 class="pt-2">Yeni bir Satıcı Ekle</h4>
        <div class="col-sm-12 my-auto">
            <form method="post" asp-action="AddDealer" asp-controller="Dealer" class="p-3 w-75 ms-auto" enctype="multipart/form-data">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    <input class="form-control" placeholder="Satıcı Adı" type="text" asp-for="@Model.Name">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Address"></span>
                    <textarea class="form-control" placeholder="Satıcı Adresi" asp-for="@Model.Address" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>