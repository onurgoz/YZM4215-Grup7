@model ProductAddModel
@section Styles{
    <style>
        ul {
            list-style-type: none;
        }
    </style>
}
<div class="container">
    <div class="row h-100">
        <div class="col-sm-12 my-auto">
            <form method="post" asp-action="AddProduct" class="p-3 w-75 ms-auto" enctype="multipart/form-data">
                <div class="form-group">
                    <span class="text-danger" asp-for="@Model.Name"></span>
                    <input class="form-control" placeholder="Ürün adı" type="text" asp-for="@Model.Name">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                    <textarea class="form-control" placeholder="Ürün Açıklaması" asp-for="Description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Resim</label>
                    <input class="form-control-file" type="file" asp-for="@Model.Image">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-info">Kaydet</button>
                </div>
            </form>
            <div asp-validation-summary="All">

            </div>
        </div>
    </div>
</div>